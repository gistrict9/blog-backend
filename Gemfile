source 'https://rubygems.org'

# Ruby version
ruby '2.0.0'

# Rails
gem 'rails', '4.1.4'
# Use mysql as the database for Active Record
gem 'mysql2'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.3'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Jquery
gem 'jquery-rails'
# Turbolinks
gem 'turbolinks'
# Passenger server
gem 'passenger'
# Authentication
gem 'devise'
# Sunspot Solr search
gem 'sunspot_rails'
gem 'sunspot_solr'
# Kaminari pagination
gem 'kaminari'
# Simple form
gem 'simple_form'
# Pretty URLs
gem 'friendly_id'
# Image uploads
gem 'paperclip'
# AWS SDK
gem 'aws-sdk'
# Environment variables
gem 'figaro'
# Tags
gem 'acts-as-taggable-on'
# Font awesome
gem "font-awesome-rails"
# Bootstrap confirm box
gem 'twitter-bootstrap-rails-confirm', github: 'bluerail/twitter-bootstrap-rails-confirm', branch: 'bootstrap3'

group :development do
	gem 'faker' # Seed data
end
